<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="models.User" table="users" schema="crudv2">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="lastName">
            <column name="last_name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="firstName">
            <column name="first_name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int"/>
        </property>
        <property name="salary">
            <column name="salary" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>